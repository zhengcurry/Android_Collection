<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height   ="wrap_content"
    android:background="@drawable/dialog_shape_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/base_dimen_20dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/base_dimen_14sp"
        tools:text="条码校验不符合，请重新扫描！！" />

    <include layout="@layout/include_line" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/base_dimen_12dp"
                android:text="取消"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/base_dimen_14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F0F0F0" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/base_dimen_12dp"
            android:text="确认"
            android:textColor="@color/color_375BF7"
            android:textSize="@dimen/base_dimen_14sp" />

    </LinearLayout>
</LinearLayout>